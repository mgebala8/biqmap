.popup{
  position:absolute;
  top:200px;
  left:50%;
  padding:5px;
  margin-left:-200px;
  border-left: 5px solid rgba(0,147,0,0.4);
  display:none;
  width:400px;
  height:auto;
  background: rgba(62, 71, 89, 1);
  z-index:999;
  //box-shadow: 0px 0px 15px 0px rgba(255, 255, 255, 0.75);
  box-sizing: border-box;

  h2{
    display: block;
    width:100%;
    margin:0px;
    height:20px;
    line-height: 20px;
    font-size: 18px;
    padding:5px;
    padding-left:20px;
    text-transform: uppercase;
    font-weight: normal;
  }

  .alert{
    ul{
      font-size: 12px;
      background-color: #0f0;
      padding: 5px;
    }

    ul.error{
      background-color: #f00;
    }

  }

  table{
    margin:10px auto;
    width:200px;

    span.button{
      display: block;
      cursor:pointer;
      background-color:grey;
      padding: 5px;
      float:right;
      margin-bottom:10px;
    }
  }
}
