//Główne style okna + style loga

body{
	background-color: #000;
	background-image:url('<%= asset_path 'main_background.jpg' %>');
	background-repeat:no-repeat;
	background-size: 100% auto;
	background-attachment: fixed;

  .main_logo{
  	width:200px;
    text-align:center;
  	font-size:150px;
  	margin:150px auto;
  	border-left:10px solid #fff;
  }

	& > h2{
		margin:20px;
		color:rgba(255,255,255,0.3)
	}

  footer{
    position:fixed;
    bottom:50px;
    right:50px;
    color:rgba(255,255,255,0.5);
    font-size:14px;
  }

  .hide{
    display:none;
  }

}
