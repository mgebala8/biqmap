//style głównego paska nawigacji

nav{

  margin:0px;
  padding:0px;
  width:100%;
  height:50px;
  line-height: 50px;
  background-color: rgba(0,147,0,0.4);

  ul{

    margin:0px;
    list-style: none;

    li{
      padding:0px 20px;
      display:inline-block;
      cursor:pointer;

      &.active{
        background-color: rgba(255,255,255,0.2);
      }

      &:hover{
        background-color: rgba(255,255,255,0.2);
      }

      a{
        text-decoration: none;
        color:#fff;
      }

    }

    li:nth-child(5) {
      float:right;
    }

    span {
      display:block;
      float:right;
      font-style: italic;
      margin:0px 10px;
    }
  }
}
