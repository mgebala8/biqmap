//style głównego paska nawigacji

nav{
  margin:0px;
  padding:0px;
  width:100%;
  height:50px;
  line-height: 50px;
  background-color: rgba(255,50,255,0.2);
  color:red;

  ul{
    margin:0px;
    list-style: none;

    li{
      padding:0px 20px;
      display:inline-block;
      cursor:pointer;

      &.active{
        background-color: rgba(255,50,255,0.2);
      }

      &:hover{
        background-color: rgba(255,50,255,0.2);
      }

    }
  }
}
